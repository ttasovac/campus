{
  "name": "campus",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "analyze": "cross-env ANALYZE='true' yarn run build",
    "build": "next build",
    "cms:dev": "netlify-cms-proxy-server",
    "cms:styles": "cross-env NODE_ENV='production' postcss node_modules/tailwindcss/tailwind.css src/styles/index.css -d public/assets/css && prettier public/assets/css --write",
    "create:favicons": "yarn run script scripts/createFavicons",
    "create:searchindex": "yarn run script scripts/createSearchIndex",
    "debug": "cross-env NODE_OPTIONS='--inspect' next dev",
    "dev": "next dev",
    "export": "next export",
    "format": "prettier . -l --ignore-path .gitignore",
    "format:fix": "yarn run format --write",
    "lint": "eslint . --cache --ignore-path .gitignore",
    "lint:fix": "yarn run lint --fix",
    "migrate": "node scripts/migrate.mjs",
    "prebuild": "yarn run create:favicons && yarn run create:searchindex && yarn run cms:styles",
    "preexport": "rimraf out",
    "prepare": "simple-git-hooks",
    "script": "ts-node -r tsconfig-paths/register",
    "start": "next start",
    "test": "jest --passWithNoTests",
    "test:coverage": "yarn run test --coverage",
    "test:watch": "yarn run test --watch",
    "typecheck": "tsc --noEmit",
    "validate": "yarn run format && yarn run lint && yarn run typecheck && yarn test"
  },
  "engines": {
    "node": "14.x",
    "yarn": "1.x"
  },
  "dependencies": {
    "@algolia/autocomplete-js": "^1.1.0",
    "@algolia/autocomplete-theme-classic": "^1.1.0",
    "@codemirror/basic-setup": "^0.18.2",
    "@codemirror/lang-xml": "^0.18.0",
    "@primer/octicons-react": "^14.2.1",
    "@reach/accordion": "^0.15.1",
    "@reach/combobox": "^0.15.1",
    "@reach/dialog": "^0.15.0",
    "@react-aria/button": "^3.3.2",
    "@react-aria/dialog": "^3.1.3",
    "@react-aria/focus": "^3.3.0",
    "@react-aria/i18n": "^3.3.1",
    "@react-aria/overlays": "^3.6.3",
    "@react-aria/ssr": "^3.0.2",
    "@react-stately/overlays": "^3.1.2",
    "@stefanprobst/next-error-boundary": "^1.0.7",
    "@stefanprobst/next-page-metadata": "^1.0.9",
    "algoliasearch": "^4.9.1",
    "clsx": "^1.1.1",
    "nanoid": "^3.1.23",
    "netlify-cms-app": "^2.15.15",
    "next": "^10.2.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.2.0",
    "rosetta": "^1.1.0",
    "strip-indent": "^4.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@next/bundle-analyzer": "^10.2.3",
    "@stefanprobst/commitlint-config": "^1.0.1",
    "@stefanprobst/eslint-config-next": "^2.0.1",
    "@stefanprobst/favicons": "^1.0.7",
    "@stefanprobst/next-sitemap": "^1.0.5",
    "@stefanprobst/next-svg": "^1.1.3",
    "@stefanprobst/rehype-extract-toc": "^1.0.3",
    "@stefanprobst/rehype-shiki": "^0.1.2",
    "@stefanprobst/remark-preset": "^1.0.1",
    "@tailwindcss/aspect-ratio": "^0.2.1",
    "@tailwindcss/typography": "^0.4.1",
    "@types/hast": "^2.3.1",
    "@types/js-yaml": "^4.0.1",
    "@types/node": "^15.6.1",
    "@types/react": "^17.0.8",
    "@types/unist": "^2.0.3",
    "autoprefixer": "^10.2.6",
    "cross-env": "^7.0.3",
    "eslint": "^7.27.0",
    "eslint-plugin-mdx": "^1.13.0",
    "hastscript": "^6.0.0",
    "jest": "^27.0.3",
    "js-yaml": "^4.1.0",
    "lint-staged": "^11.0.0",
    "netlify-cms-proxy-server": "^1.3.16",
    "next-transpile-modules": "^7.2.0",
    "postcss": "^8.3.0",
    "postcss-cli": "^8.3.1",
    "postcss-nesting": "^8.0.1",
    "prettier": "^2.3.0",
    "rehype-autolink-headings": "^5.1.0",
    "rehype-slug": "^4.0.1",
    "remark": "^13.0.0",
    "remark-footnotes": "^3.0.0",
    "remark-frontmatter": "^3.0.0",
    "remark-gfm": "^1.0.0",
    "remark-lint-no-dead-urls": "^1.1.0",
    "rimraf": "^3.0.2",
    "sass": "^1.34.1",
    "shiki": "^0.9.4",
    "simple-git-hooks": "^2.4.1",
    "tailwindcss": "^2.1.3",
    "terser": "^5.7.0",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.3.2",
    "unified": "^9.2.1",
    "unist-util-visit": "^2.0.3",
    "vfile": "^4.2.1",
    "vfile-matter": "^2.2.0",
    "xdm": "^1.11.0"
  },
  "resolutions": {
    "shiki": "0.9.4"
  },
  "babel": {
    "presets": [
      "next/babel"
    ]
  },
  "browserslist": [
    "defaults",
    "not ie 11",
    "not op_mini all"
  ],
  "commitlint": {
    "extends": "@stefanprobst/commitlint-config"
  },
  "eslintConfig": {
    "extends": "@stefanprobst/eslint-config-next",
    "rules": {
      "@next/next/no-document-import-in-page": "off"
    }
  },
  "lint-staged": {
    "*.@(js|ts|tsx)": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.@(css|json|yml)": "prettier --write",
    "*.@(md|mdx)": "prettier --write"
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "postcss-nesting": {},
      "autoprefixer": {}
    }
  },
  "prettier": {
    "proseWrap": "always",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "overrides": [
      {
        "files": [
          "content/**/*.@(md|mdx)"
        ],
        "options": {
          "proseWrap": "never",
          "singleQuote": false
        }
      }
    ]
  },
  "remarkConfig": {
    "plugins": [
      "remark-frontmatter",
      "remark-gfm",
      "remark-footnotes",
      "@stefanprobst/remark-preset",
      "remark-lint-no-dead-urls"
    ]
  },
  "simple-git-hooks": {
    "commit-msg": "yarn commitlint --edit",
    "pre-commit": "yarn lint-staged",
    "pre-push": "yarn run validate"
  }
}
